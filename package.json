{
  "name": "mekanika-schema",
  "version": "0.10.1",
  "description": "Data structure and rule engine",
  "main": "index.js",
  "scripts": {
    "test": "mocha -R spec test/",
    "browser": "browserify index.js -o build/mekanika-schema.js -s schema",
    "compress": "uglifyjs build/mekanika-schema.js -cm -o build/mekanika-schema.min.js",
    "build": "npm run browser && npm run compress",
    "docs": "jsdoc -c .jsdoc.conf --destination docs/ index.js src/ Readme.md",
    "lint": "jshint --config .jshintrc index.js src/*.js test/*.js",
    "coverage": "istanbul cover _mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mekanika/schema.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mekanika/schema/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "mocha": "~2.0.1",
    "chai": "~1.9.2"
  }
}
