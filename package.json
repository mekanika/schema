{
  "name": "skematic",
  "description": "Data structure and rule engine",
  "keywords": [
    "compute",
    "data",
    "format",
    "generate",
    "mekanika",
    "mekanika-schema",
    "model",
    "project",
    "schema",
    "schemajs",
    "validate",
    "validation"
  ],
  "version": "2.0.0-alpha.1",
  "homepage": "https://github.com/mekanika/skematic",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "benchmark": "node perf/benchmark.js",
    "browser": "browserify src/api.js -o build/skematic.dev.js -s Skematic -t [ babelify --presets [ es2015 ] --plugins [ transform-object-rest-spread ] ]",
    "build": "npm run browser && npm run compress",
    "compress": "uglifyjs build/skematic.dev.js -cm -o build/skematic.min.js",
    "coverage": "istanbul cover _mocha",
    "lint": "standard --verbose index.js src/*.js test/*.js perf/*.js | snazzy",
    "test": "mocha -r babel-register -R spec test/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mekanika/skematic.git"
  },
  "bugs": {
    "url": "https://github.com/mekanika/skematic/issues"
  },
  "dependencies": {
  },
  "devDependencies": {
    "babel-eslint": "^6.1.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "snazzy": "^4.0.0",
    "standard": "^7.1.2",
    "uglify-js": "^2.6.4"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-object-rest-spread"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
